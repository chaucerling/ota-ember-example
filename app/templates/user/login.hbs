{{outlet}}
{{nav-header title='时租房・用户登录' path='hotels.search'}}

<div id="sign_in" class="row">
  <div class="login_box">
    {{#if loginFailed}}
      <div class="alert alert-danger">{{failedResult}}</div>
    {{/if}}
    <form {{action 'authenticate' on='submit'}}>
      <div class="form-group">
        {{input value=phone placeholder='手机号/会员卡号' class='form-control' type='text'}}
      </div>
      <div class="form-group">
        {{input value=password placeholder='密码' class='form-control' type='password'}}
      </div>
      <button type="submit" class="btn btn-block btn-info" {{bindAttr disabled="isProcessing"}}>
        {{#if isProcessing}}
          登 录 中
        {{else}}
          登 录
        {{/if}}
      </button>
    </form>
  </div>
</div>
